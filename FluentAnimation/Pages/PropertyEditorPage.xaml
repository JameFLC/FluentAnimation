<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentAnimation.Pages.PropertyEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentAnimation.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:propedit="using:FluentAnimation.Controls.PropertyEditor"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <propedit:ProceduralControl x:Name="Procedural" />
            <TextBlock x:Name="DebugTextBlock" Grid.Row="1" />
        </Grid>
    </ScrollViewer>
</Page>
