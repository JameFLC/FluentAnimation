<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FluentAnimation.Controls.AnimatedThumbnail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentAnimation.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Border x:Name="BottomImage"
                Height="64" 
                Width="64" 
                Opacity="1"
                CornerRadius="8" 
                BorderThickness="1"
                HorizontalAlignment="Left">
            <Border.Background>
                <ImageBrush x:Name="BottomImageBrush" Stretch="UniformToFill"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="{StaticResource ControlStrongStrokeColorDefault}" Opacity="0.25" />
            </Border.BorderBrush>
        </Border>

        <Border x:Name="TopImage"
                Height="64" 
                Width="64" 
                Opacity="0"
                CornerRadius="8" 
                BorderThickness="1"
                HorizontalAlignment="Left">
            <Border.Background>
                <ImageBrush x:Name="TopImageBrush" Stretch="UniformToFill"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="{StaticResource ControlStrongStrokeColorDefault}" Opacity="0.25" />
            </Border.BorderBrush>
        </Border>
    </Grid>
</UserControl>
